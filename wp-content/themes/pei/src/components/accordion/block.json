{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "pei/accordion",
  "version": "1.0.0",
  "title": "Accordion (PEI)",
  "category": "pei",
  "icon": "list-view",
  "description": "Branded accordion with multiple items.",
  "supports": { "html": false, "anchor": true, "align": ["wide", "full"] },
  "attributes": {
    "light": { "type": "boolean", "default": true },
    "items": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "content": { "type": "string" }
        }
      }
    }
  },
  "render": "file:./accordion.php"
}
